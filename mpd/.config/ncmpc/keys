## Key bindings for ncmpc (generated by ncmpc)

## Key configuration screen
key screen-keyedit = 'K',  '0',  F10

## Move cursor up
key up = 259,  'k',  Ctrl-Y

## Move cursor down
key down = 258,  'j',  Ctrl-E

## Move cursor to the bottom of screen
key bottom = 'L'

## Move cursor to the top of the list
key home = 262,  'g'

## Move cursor to the bottom of the list
key end = 360,  'G'

## Page up
key pgup = 339,  Ctrl-B

## Page down
key pgdn = 338,  Ctrl-F

## Scroll up one line
key scroll-up-line = Ctrl-P

## Scroll up half a screen
key scroll-down-half = Ctrl-D

## Scroll down half a screen
key scroll-up-half = Ctrl-U

## Select currently playing song
key select-playing = 263

## Help screen
key screen-help = '1',  F1,  63

## Play/Enter directory
key play = Ctrl-M,  'l'

## Pause
key pause = 'p',  32

## Stop
key stop = 's'

## Seek forward
key seek-forward = 'f',  261

## Seek backward
key seek-backward = 'b',  260

## Increase volume
key volume-up = 43,  61

## Decrease volume
key volume-down = 45

## Select/deselect song in queue
key select = 't'

## Select all listed items
key select_all = 'T'

## Clear queue
key clear = 'C'

## Toggle consume mode
key consume = 'c'

## Start a music database update
key db-update = 'U'

## Go to parent directory
key go-parent-directory = 'h'

## Locate song in browser
key locate = Ctrl-G

## Toggle auto center mode
key autocenter-mode = 0

## Next screen
key screen-next = Ctrl-I,  46

## Previous screen
key screen-prev = 353,  44

## Backward find
key rfind = 0

## Backward find previous
key rfind-next = 'N'

## Jump to
key jump = 'J'

## View the selected and the currently playing song
key view = 'i',  '6',  F6

## Lyrics screen
key screen-lyrics = '7',  F7

## Update Lyrics
key lyrics-update = 0

## Chat screen
key screen-chat = '9',  F9

